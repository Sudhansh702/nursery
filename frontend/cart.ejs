<!DOCTYPE html>
<html>

<head>
    </script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet" />
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }
    </style>
</head>

    <!-- Navbar -->
    <%- include('partials/navbar.ejs')%>
<body class="bg-gray-100 p-8">
    <div class="max-w-4xl mx-auto bg-white p-8 shadow-md">
        <h1 class="text-2xl font-bold mb-6">
            Cart
        </h1>
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white border border-gray-200">
                <thead>
                    <tr class="w-full bg-gray-100 border-b">
                        <th class="py-4 px-6 text-left">
                            Product
                        </th>
                        <th class="py-4 px-6 text-left">
                            Price
                        </th>
                        <th class="py-4 px-6 text-left">
                            Remove
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <% cartItems.forEach(function(item) { %>
                    <tr class="border-b">
                        <td class="py-4 px-6 flex items-center">
                            <img alt="Image of <%= item.name %>" class="w-12 h-12 mr-4" height="50"
                                src="<%= item.imageUrl %>"
                                width="50" />
                            <span>
                                <%= item.name %>
                            </span>
                        </td>
                        <td class="py-4 px-6">
                            ₹<%= item.price.toFixed(2) %>
                        </td>
                        <td class="py-4 px-6">
                            <a href="/cart/remove/<%= item.id %>" >
                                <i class="fas fa-trash-alt text-red-500"></i>
                            </a>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
       
        <div class="mt-8 p-6 border border-gray-200 rounded">
            <h2 class="text-xl font-bold mb-4">
                Cart totals
            </h2>
            <div class="flex justify-between mb-2">
                <span>
                    Subtotal
                </span>
                <span>
                    ₹<%= subtotal %>
                </span>
            </div>
            <a href="/checkout">
                <button class="bg-red-500 text-white w-full py-3 rounded">
                    PROCEED TO CHECKOUT
                </button>
            </a>
        </div>
    </div>

        <!-- footer -->
        <%- include('partials/footer.ejs')%>
</body>

</html>