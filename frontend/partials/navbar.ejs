<html>

<head>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <!-- <link href="../css/output.css" rel="stylesheet"> -->

    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }

        .sidebar {
            transform: translateX(-100%);
            transition: transform 0.3s ease-in-out;
        }

        .sidebar-open {
            transform: translateX(0);
        }
    </style>
</head>

<body class="bg-gray-100">


    <nav class="bg-gray-100 border-b border-gray-300">
        <div class="container mx-auto px-4 py-2 flex justify-between items-center">
            <div class="text-lg font-medium">
                Nursery
            </div>
            <div class="hidden md:flex items-center space-x-6">
                <a href="/" class="text-red-500">Home</a>
                <a href="/store" class="text-red-500">Store</a>

                <a href="/about" class="text-gray-700">About Us</a>
                <a href="/contactUs" class="text-gray-700">Contact Us</a>
                <a href="/myaccount" class="text-gray-700">My account</a>
                <a href="/cart" class="text-gray-700">
                    <div class="flex items-center space-x-2">
                        <span class="text-red-500 font-bold">CART</span>
                        <div class="relative">
                            <i class="fas fa-shopping-cart text-red-500"></i>
                        </div>
                    </div>
                </a>
            </div>
            <div class="md:hidden">
                <button id="menu-button" class="text-orange-500 focus:outline-none">
                    <i class="fas fa-bars text-2xl"></i>
                </button>
            </div>
        </div>
    </nav>

    <div id="sidebar" class="fixed z-20 top-0 left-0 w-64 h-full bg-gray-100 shadow-lg sidebar">
        <div class="p-4">
            <button id="close-button" class="text-orange-500 focus:outline-none mb-4">
                <i class="fas fa-times text-2xl"></i>
            </button>
            <a href="/home" class="block text-red-500 mb-2">Home</a>
            <a href="/store" class="block text-gray-700 mb-2">Store</a>
            <a href="/about" class="block text-gray-700 mb-2">About Us</a>
            <a href="/contactUs" class="block text-gray-700 mb-2">Contact Us</a>
            <a href="/myaccount" class="block text-gray-700 mb-2">My account</a>
            <div class="flex items-center space-x-2 mt-4">
                <span class="text-red-500 font-bold">CART</span>
                <div class="relative">
                    <i class="fas fa-shopping-cart text-red-500"></i>
                </div>
                <i class="fas fa-user text-gray-700"></i>
            </div>
        </div>
    </div>

</body>
